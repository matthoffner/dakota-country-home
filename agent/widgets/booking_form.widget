{
  "version": "1.0",
  "name": "booking_form",
  "template": "{\n  \"type\": \"Card\",\n  \"asForm\": true,\n  \"title\": \"Book Your Stay\",\n  \"children\": [\n    {\n      \"type\": \"Col\",\n      \"gap\": 4,\n      \"children\": [\n        {\n          \"type\": \"Row\",\n          \"gap\": 3,\n          \"children\": [\n            {\n              \"type\": \"Col\",\n              \"flex\": 1,\n              \"children\": [\n                {\"type\": \"Label\", \"value\": \"Check-in\", \"htmlFor\": \"checkin\"},\n                {\n                  \"type\": \"DatePicker\",\n                  \"id\": \"checkin\",\n                  \"name\": \"checkin\",\n                  \"placeholder\": \"Select date\",\n                  \"min\": {{ min_date | tojson }},\n                  \"value\": {{ checkin | default('') | tojson }}\n                }\n              ]\n            },\n            {\n              \"type\": \"Col\",\n              \"flex\": 1,\n              \"children\": [\n                {\"type\": \"Label\", \"value\": \"Check-out\", \"htmlFor\": \"checkout\"},\n                {\n                  \"type\": \"DatePicker\",\n                  \"id\": \"checkout\",\n                  \"name\": \"checkout\",\n                  \"placeholder\": \"Select date\",\n                  \"min\": {{ min_date | tojson }},\n                  \"value\": {{ checkout | default('') | tojson }}\n                }\n              ]\n            }\n          ]\n        },\n        {\n          \"type\": \"Col\",\n          \"children\": [\n            {\"type\": \"Label\", \"value\": \"Number of Guests\", \"htmlFor\": \"guests\"},\n            {\n              \"type\": \"Select\",\n              \"id\": \"guests\",\n              \"name\": \"guests\",\n              \"placeholder\": \"Select guests\",\n              \"value\": {{ guests | default('') | tojson }},\n              \"options\": [\n                {\"label\": \"1 guest\", \"value\": \"1\"},\n                {\"label\": \"2 guests\", \"value\": \"2\"},\n                {\"label\": \"3 guests\", \"value\": \"3\"},\n                {\"label\": \"4 guests\", \"value\": \"4\"},\n                {\"label\": \"5 guests\", \"value\": \"5\"},\n                {\"label\": \"6 guests\", \"value\": \"6\"},\n                {\"label\": \"7 guests\", \"value\": \"7\"},\n                {\"label\": \"8 guests\", \"value\": \"8\"},\n                {\"label\": \"9 guests\", \"value\": \"9\"},\n                {\"label\": \"10 guests\", \"value\": \"10\"}\n              ]\n            }\n          ]\n        },\n        {\n          \"type\": \"Col\",\n          \"children\": [\n            {\"type\": \"Label\", \"value\": \"Email Address\", \"htmlFor\": \"email\"},\n            {\n              \"type\": \"Input\",\n              \"id\": \"email\",\n              \"name\": \"email\",\n              \"placeholder\": \"your@email.com\",\n              \"value\": {{ email | default('') | tojson }}\n            }\n          ]\n        },\n        {\n          \"type\": \"Divider\"\n        },\n        {\n          \"type\": \"Row\",\n          \"gap\": 2,\n          \"children\": [\n            {\"type\": \"Spacer\"},\n            {\n              \"type\": \"Button\",\n              \"label\": \"Check Availability\",\n              \"variant\": \"solid\",\n              \"color\": \"primary\",\n              \"onClickAction\": {\n                \"type\": \"booking.check_availability\",\n                \"handler\": \"server\"\n              }\n            }\n          ]\n        }\n      ]\n    }\n  ]\n}",
  "jsonSchema": {
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
      "min_date": {"type": "string"},
      "checkin": {"type": "string"},
      "checkout": {"type": "string"},
      "guests": {"type": "string"},
      "email": {"type": "string"}
    },
    "required": ["min_date"]
  }
}
